public class OperadoresIncremento {
	
	public static void main(String[] args) {
		
		System.out.println("Imcrementando");
		System.out.println("------------------------");
		//Operadores de incremento
		int i = 0;
		int y = 0;
		
		 // ++i - Operador de pr�-imcremento, aqui o incremento ocorre antes da instru��o 
		System.out.println("Incrementa antes: " + ++i);// neste caso o resultado � 1
		
		// y++ - Operador de p�s-imcremento, aqui o incremento ocorre depois da instru��o 
		System.out.println("Incrementa depois: " + y++); // neste caso o resultado � 0
		

		System.out.println("");
		System.out.println("");

		System.out.println("Decrementando");
		System.out.println("------------------------");
		//Operadores de decremento
		int a = 0;
		int b = 0;
		
		 // ++i - Operador de pr�-imcremento, aqui o incremento ocorre antes da instru��o 
		System.out.println("decrementa antes: " + --a);// neste caso o resultado � 1
		
		// y++ - Operador de p�s-imcremento, aqui o incremento ocorre depois da instru��o 
		System.out.println("decrementa depois: " + b--); // neste caso o resultado � 0

		
		
		//Defini��o
		int u = 0;
		
		u = u + 10; //forma tradicinal
		u += 10; //Utilizando operador de atribui��o
		u++;// Utilizando operador de incremento/decremento
		
	}

}
