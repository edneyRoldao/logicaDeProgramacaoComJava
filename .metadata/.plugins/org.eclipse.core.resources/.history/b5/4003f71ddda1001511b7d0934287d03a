package solvedExercises;

import java.util.Calendar;

/**
 * 
 * @author edneyroldao
 * This class is working with time of live through many ways
 */
public class TempoDeVida {
	
	public static void main(String[] args) {
	    //System.out.println(Calendar.getInstance().);
		//System.out.println(calcularDiasDeVida(1982));
		Calendar c = Calendar.getInstance();
		System.out.println((c.get(Calendar.YEAR) - (1982 + 1)) * 365);
	}
	
	public static int calcularDiasDeVida(int anoNascimento) {

		Calendar hoje = Calendar.getInstance();
		int diasEmAnos = (hoje.get(Calendar.YEAR) - (1982 + 1)) * 365;
		int diasEmMeses = hoje.get(Calendar.MONTH) * 30;
		
		return diasEmAnos + diasEmMeses + hoje.get(Calendar.DAY_OF_MONTH);
	}

}
