package solvedExercises;

import java.util.Calendar;

/**
 * 
 * @author edneyroldao
 * This class is working with time of live through many ways
 */
public class TempoDeVida {
	
	public static void main(String[] args) {
	//	System.out.println(Calendar.getInstance().);
	}
	
	public static int calcularDiasDeVida(int anoNascimento) {
		
		Calendar hoje = Calendar.getInstance();
		int anoAtual = hoje.get(Calendar.YEAR);
		int mesAtual = hoje.get(Calendar.MONTH + 1);
		int diaDoMesAtual = hoje.get(Calendar.DAY_OF_MONTH);
		int diasAnosCompletos = (anoAtual - anoNascimento - 1) * 365;
		int diasMesesCompletos = (mesAtual - 1) * 30;
		
		return diasAnosCompletos + diasMesesCompletos + diaDoMesAtual;
	}

}
